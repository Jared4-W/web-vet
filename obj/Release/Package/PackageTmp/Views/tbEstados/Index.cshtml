@model IEnumerable<Examen1_JaredChavez.Models.tbEstados>

@{
    ViewBag.Title = "Index";
}

<h2>Estados</h2>

<p>
    @Html.ActionLink("Registrar estado", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Estado)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.IdEstado }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.IdEstado }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.IdEstado })
        </td>
    </tr>
}

</table>
